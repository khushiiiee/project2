<% layout("/layouts/boilerplate") %>


    <div class="row">
      <div class="col-8 offset-2"> 
        <br><br>
    <h3>Create new :</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
       
    <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name= "listing[title]" class="form-control" type="text" placeholder="enter title" required></input>
        <div class="valid-feedback"> Title looks good.
        </div>
    </div>
    <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name= "listing[description]" class="form-control" type="text" placeholder="enter description" required></textarea> 
        <div class="invalid-feedback">
         description should not be short.
        </div>
    </div>
    
    <div class="mb-3">
      <label for="image" class="form-label">UploadImage</label>
   <input name= "listing[image]"
   class="form-control" 
   type="file" required ></input> 
  </div>

  <div class="row">
    <div class="mb-3 col-4">
        <label for="price" class="form-label">Price</label>
     <input name= "listing[price]" class="form-control"   placeholder="enter price" required></input>
     <div class="invalid-feedback">
      price should be valid
     </div>
     
    </div>
    <div class="mb-3 col-8">
        <label for="country" class="form-label">Country</label>
     <input name= "listing[country]" class="form-control" type="text" placeholder="enter country" required></input>
     <div class="invalid-feedback">
      country name should be valid
     </div>
    </div>
  </div>
    <div class="mb-3">
        <label for="location" class="form-label">Location</label>
     <input name= "listing[location]" class="form-control" type="text" placeholder="enter location" required></input>
     <div class="invalid-feedback">
       location should be valid
     </div>
    </div>
     <br><br>
     <button class="btn btn-dark add-btn">ADD</button>
    </form>
</div>
</div>


